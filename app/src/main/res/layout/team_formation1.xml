<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/solo"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:backgroundTint="#074EE8"
        android:text="Participate Solo"
        android:textAllCaps="false"
        android:textSize="18dp" />
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You will still be able to join team later"
        android:layout_below="@+id/solo"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="20dp"/>

    <View
        android:id="@+id/view"
        android:layout_width="140dp"
        android:layout_height="2dp"
        android:layout_below="@+id/text"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_alignLeft="@+id/text"
        android:background="#BEBEBE" />
    <TextView
        android:id="@+id/or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="or"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/view"
        android:layout_below="@id/text"
        android:layout_marginTop="41dp"/>
    <View
        android:id="@+id/view2"
        android:layout_width="140dp"
        android:layout_height="2dp"
        android:layout_below="@+id/text"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/or"
        android:background="#BEBEBE" />
    <Button
        android:id="@+id/team"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/view"
        android:layout_marginTop="50dp"
        android:backgroundTint="#074EE8"
        android:text="Join or Create a Team"
        android:textAllCaps="false"
        android:textSize="18dp" />
    <TextView
        android:id="@+id/max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Max 2 person in one team"
        android:layout_below="@+id/team"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="When you submit you profile as part of a team we take the strength of the entire team into consideration and not just the strength of individual profiles. "
        android:layout_below="@+id/max"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="#6B6161"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="Sometimes, the whole is greater than the sum of its parts ðŸ˜€"
        android:layout_below="@+id/text3"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="20dp"/>


</RelativeLayout>