<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<TextView
    android:id="@+id/textt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="OTP has been sent to hs20xxxxxx@gmail.com"
    android:gravity="center"
    android:fontFamily="@font/montserrat"
    android:textSize="22dp"
    android:layout_margin="40dp"
    android:textColor="@color/black"/>

    <com.chaos.view.PinView
        android:id="@+id/firstPinView"
        style="@style/PinWidget.PinView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textt"
        android:cursorVisible="true"
        android:inputType="number"
        app:cursorColor="@color/black"
        app:itemRadius="5dp"
        android:layout_alignLeft="@+id/textt"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="20dp"
        app:lineColor="#AAAAAA"
        app:itemCount="4"
        app:itemHeight="70dp"
        app:itemWidth="70dp"
        app:lineWidth="2dp"
        app:viewType="rectangle" />

    <TextView
        android:id="@+id/textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/firstPinView"
        android:layout_alignLeft="@+id/firstPinView"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="20dp"
        android:text="Didn't Receive the OTP?"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/firstPinView"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="21dp"
        android:layout_toRightOf="@+id/textview1"
        android:text="Resend"
        android:textColor="#074EE8"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview1"
        android:layout_alignLeft="@id/textview1"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="27dp"
        android:text="Change Email id"
        android:textColor="#074EE8"
        android:textSize="18dp" />
    <Button
        android:id="@+id/verify"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_below="@id/change"
        android:layout_alignLeft="@+id/sketch"
        android:layout_margin="50dp"
        android:layout_centerInParent="true"
        android:backgroundTint="#074EE8"
        android:text="Verify"
        android:textAllCaps="false"
        android:textSize="18dp" />
</RelativeLayout>