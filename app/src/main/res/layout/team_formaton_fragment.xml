<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/teamnameInputField"
        style="@style/LoginTextInputLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:hint="Team Name "
        android:layout_marginBottom="15dp"
        app:background="@color/white"
        android:textColorHint="#767676"
        app:boxStrokeColor="#767676"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/teamnameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:fontFamily="monospace"
            android:textColor="@color/black"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_below="@id/teamnameInputField"
        android:layout_centerInParent="true"
        android:backgroundTint="#074EE8"
        android:text="Let's Go!"
        android:textAllCaps="false"
        android:textSize="18dp" />

    <androidx.appcompat.widget.SwitchCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button"
        android:layout_marginLeft="20dp"
        android:scaleX="0.25"
        android:scaleY="0.25"
        android:thumb="@drawable/thumb"
        app:track="@drawable/track" />

    <TextView
        android:id="@+id/textview4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="150dp"
        android:text="Looking for teammates?"
        android:textColor="@color/black"
        android:textSize="15dp" />
    <View
        android:id="@+id/view"
        android:layout_width="140dp"
        android:layout_height="2dp"
        android:layout_below="@+id/textview4"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="60dp"
        android:background="#BEBEBE" />
    <TextView
        android:id="@+id/or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="or"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/view"
        android:layout_below="@id/textview4"
        android:layout_marginTop="41dp"/>
    <View
        android:id="@+id/view2"
        android:layout_width="140dp"
        android:layout_height="2dp"
        android:layout_below="@+id/textview4"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/or"
        android:background="#BEBEBE" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/teamcodeInputField"
        style="@style/LoginTextInputLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="32dp"
        android:layout_below="@+id/view"
        android:layout_marginEnd="32dp"
        android:hint="Enter team code "
        android:layout_marginBottom="15dp"
        app:background="@color/white"
        android:textColorHint="#767676"
        app:boxStrokeColor="#767676"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/teamcodeInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:fontFamily="monospace"
            android:textColor="@color/black"
            />

    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/join"
        android:layout_width="150dp"
        android:layout_marginTop="20dp"
        android:layout_height="70dp"
        android:layout_below="@id/teamcodeInputField"
        android:layout_centerInParent="true"
        android:backgroundTint="#074EE8"
        android:text="Join Team"
        android:textAllCaps="false"
        android:textSize="18dp" />
</RelativeLayout>