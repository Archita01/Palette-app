<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/usernameInputField"
        style="@style/LoginTextInputLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:hint="Enter Name"
        app:background="@color/white"
        android:textColorHint="#767676"
        app:boxStrokeColor="#767676">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/nameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:fontFamily="monospace"
            android:textColor="@color/black" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/nameInputField"
        style="@style/LoginTextInputLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="10dp"
        android:hint="Enter Email "
        app:background="@color/white"
        android:textColorHint="#767676"
        app:boxStrokeColor="#767676"
        android:layout_below="@+id/usernameInputField"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/usernameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:fontFamily="monospace"
            android:textColor="@color/black"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passwordInputField"
        style="@style/LoginTextInputLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="32dp"
        app:passwordToggleEnabled="true"
        android:hint="Enter Password"
        app:background="@color/white"
        android:textColorHint="#767676"
        app:boxStrokeColor="#767676"
        android:layout_below="@+id/nameInputField"
        >

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/passwordInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:fontFamily="monospace"
        android:textColor="@color/black"
        />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/repasswordInputField"
        style="@style/LoginTextInputLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="32dp"
        app:passwordToggleEnabled="true"
        android:hint="Re-enter Password"
        app:background="@color/white"
        android:textColorHint="#767676"
        app:boxStrokeColor="#767676"
        android:layout_below="@+id/passwordInputField"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/repasswordInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:fontFamily="monospace"
            android:textColor="@color/black"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/register_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#074EE8"
        android:layout_below="@+id/repasswordInputField"
        android:text="Register"
        android:textAllCaps="false"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_marginLeft="150dp"
        ></Button>
    <View
        android:id="@+id/line"
        android:layout_width="140dp"
        android:layout_height="2dp"
        android:background="@color/black"
        android:layout_below="@+id/register_button"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="134dp"
       />

    <Button
        android:id="@+id/google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login with Google"
        android:layout_below="@+id/line"
        android:backgroundTint="@color/black"
        android:textAllCaps="false"
        android:drawableLeft="@drawable/ic_google"
        android:drawablePadding="2dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="100dp"
        ></Button>
    <Button
        android:id="@+id/figma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login with Figma"
        android:layout_below="@+id/google"
        android:backgroundTint="@color/black"
        android:textAllCaps="false"
        android:drawableLeft="@drawable/ic_figma"
        android:drawablePadding="3dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="24dp"
        android:paddingLeft="22dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="100dp"
        ></Button>
</RelativeLayout>